{
  "schema": [
    { "name": "blockContent", "title": "Block Content", "type": "array" },
    { "name": "category", "title": "Category", "type": "document" },
    { "name": "post", "title": "Post", "type": "document" },
    { "name": "author", "title": "Author", "type": "document" }
  ],
  "queries": [
    { "name": "POSTS_QUERY", "query": "*[_type == 'post' && defined(slug.current)][0...12]{ _id, title, slug }" },
    { "name": "POST_QUERY", "query": "*[_type == 'post' && slug.current == $slug][0]{ title, body, mainImage }" }
  ]
}
